{
    /* Based on: https://github.com/total-typescript/tsconfig/blob/main/tsc/dom/app.json */
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "allowJs": true,
        /* "resolveJsonModule": true, */
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        /* If transpiling with TypeScript: */
        /* "ESNext" instead of "NodeNext", for ESM compiling via "gulp-typescript"
        /* "module": "NodeNext", */
        "module": "ESNext",
        "outDir": "./dist",
        "sourceMap": true,
        "removeComments": true,
        /* If your code runs in the DOM: */
        "lib": ["ES2022", "dom", "dom.iterable"]
    },
    "include": ["./src/**/*"]
}
